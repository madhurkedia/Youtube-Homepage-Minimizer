{
  "manifest_version": 3,
  "name": "YouTube Minimal Search",
  "version": "1.0.0",
  "description": "Show only a centered search bar on YouTube homepage; everything else is hidden. Results and watch pages remain normal.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "styles.css"
      ],
      "run_at": "document_end"
    }
  ]
}